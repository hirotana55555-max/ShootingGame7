# DynamicErrorMonitor Environment Variables
# Copy to .env and fill in actual values

# Required: Path to Project_Cognize static_index.db
STATIC_INDEX_DB_PATH=../Project_Cognize/database/static_index.db

# Required: Glitchtip DSN (get from Glitchtip UI after setup)
GLITCHTIP_DSN=http://public@localhost:9000/1

# Optional: Collector port
PORT=3000

# Optional: Log level
LOG_LEVEL=info

# Optional: Database path (default: ./database/errors.db )
ERRORS_DB_PATH=./database/errors.db
